@page
@model MicroMercado.Presentation.Pages.NewClientModel

@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
    Layout = "~/Presentation/Pages/Shared/_Layout.cshtml"; ;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Registrar Nuevo Cliente</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Sales">Ventas</a></li>
                    <li class="breadcrumb-item active">Nuevo Cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>

div class="content">
<div class="container-fluid">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Datos del Cliente</h3>
        </div>
        <form method="post">
            <div class="card-body">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div> 

                <div class="form-group mb-3">
                    <label asp-for="NewClient.BusinessName" class="form-label">Nombre/Razón Social</label>
                    <input asp-for="NewClient.BusinessName" class="form-control" placeholder="Ingrese el nombre o razón social" />
                    <span asp-validation-for="NewClient.BusinessName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewClient.Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="NewClient.Email" class="form-control" placeholder="Ingrese el email" />
                    <span asp-validation-for="NewClient.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewClient.Address" class="form-label">Dirección</label> 
                    <input asp-for="NewClient.Address" class="form-control" placeholder="Ingrese la dirección (opcional)" />
                    <span asp-validation-for="NewClient.Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NewClient.TaxDocument" class="form-label">NIT/CI</label>
                    <input asp-for="NewClient.TaxDocument" class="form-control" placeholder="Ingrese el documento de identidad o NIT" />
                    <span asp-validation-for="NewClient.TaxDocument" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cliente
                </button>
                <a asp-page="/Sales" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar y Volver a Ventas
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}