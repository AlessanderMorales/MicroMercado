@page "{id:int?}"
@model MicroMercado.Presentation.Pages.EditClientModel

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Presentation/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .required-field::after {
            content: " *";
            color: #dc3545;
        }

        .card-header {
            background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%); 
            color: white;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #a1c4fd;
            box-shadow: 0 0 0 0.2rem rgba(161, 196, 253, 0.25);
        }

        .alert ul {
            list-style: none !important;
            padding-left: 0 !important;
            margin-bottom: 0 !important;
            display: inline !important;
        }
    </style>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a asp-page="/ClientPage" class="btn btn-info mb-2">
                    <i class="fas fa-list"></i> Ver Lista de Clientes
                </a>

                <h1 class="m-0">
                    <i class="fas fa-user-edit text-info"></i>
                    Editar Cliente
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="/ClientPage">Clientes</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-pencil-alt"></i>
                            Modificar Información del Cliente
                        </h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="EditClient.Id" />

                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <div asp-validation-summary="All" class="mb-0 d-inline-block"></div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <div class="row">
                                <!-- Nombre/Razón Social -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EditClient.BusinessName" class="form-label fw-bold required-field">
                                        <i class="fas fa-building"></i>
                                        Nombre/Razón Social
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-user"></i>
                                        </span>
                                        <input asp-for="EditClient.BusinessName"
                                               class="form-control"
                                               placeholder="Ingrese el nombre o razón social" />
                                    </div>
                                    <span asp-validation-for="EditClient.BusinessName" class="text-danger small"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EditClient.Email" class="form-label fw-bold required-field">
                                        <i class="fas fa-at"></i>
                                        Email
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                        <input asp-for="EditClient.Email"
                                               type="email"
                                               class="form-control"
                                               placeholder="Ingrese el email" />
                                    </div>
                                    <span asp-validation-for="EditClient.Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Dirección -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EditClient.Address" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt"></i>
                                        Dirección
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-home"></i>
                                        </span>
                                        <input asp-for="EditClient.Address"
                                               class="form-control"
                                               placeholder="Ingrese la dirección (opcional)" />
                                    </div>
                                    <span asp-validation-for="EditClient.Address" class="text-danger small"></span>
                                </div>

                                <!-- NIT/CI -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EditClient.TaxDocument" class="form-label fw-bold required-field">
                                        <i class="fas fa-id-card"></i>
                                        NIT/CI
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-passport"></i>
                                        </span>
                                        <input asp-for="EditClient.TaxDocument"
                                               class="form-control"
                                               placeholder="Ingrese el documento de identidad o NIT" />
                                    </div>
                                    <span asp-validation-for="EditClient.TaxDocument" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Estado -->
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EditClient.Status" class="form-label fw-bold required-field">
                                        <i class="fas fa-toggle-on"></i>
                                        Estado
                                    </label>
                                    <div class="input-group">
                                        <select asp-for="EditClient.Status" class="form-select">
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="EditClient.Status" class="text-danger small"></span>
                                </div>
                            </div>

                        </div>

                        <div class="card-footer bg-light">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-save"></i>
                                        Actualizar Cliente
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a asp-page="/ClientPage" class="btn btn-secondary btn-lg w-100">
                                        <i class="fas fa-times"></i>
                                        Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Información adicional -->
                <div class="card mt-3">
                    <div class="card-body bg-light">
                        <h6 class="fw-bold">
                            <i class="fas fa-info-circle text-info"></i>
                            Información Importante
                        </h6>
                        <ul class="mb-0">
                            <li>Los campos marcados con <span class="text-danger">*</span> son obligatorios.</li>
                            <li>Asegúrese de que el NIT/CI sea único si su sistema lo requiere.</li>
                            <li>El estado del cliente determina su visibilidad en el sistema.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}