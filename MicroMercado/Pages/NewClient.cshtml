@page
@model MicroMercado.Pages.NewClientModel 

@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
    Layout = "_Layout";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Registrar Nuevo Cliente</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Sales">Ventas</a></li>
                    <li class="breadcrumb-item active">Nuevo Cliente</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Datos del Cliente</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="NewClient.Name" class="form-label">Nombre</label>
                        <input asp-for="NewClient.Name" class="form-control" placeholder="Ingrese el nombre" />
                        <span asp-validation-for="NewClient.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="NewClient.LastName" class="form-label">Apellido</label>
                        <input asp-for="NewClient.LastName" class="form-control" placeholder="Ingrese el apellido" />
                        <span asp-validation-for="NewClient.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="NewClient.TaxDocument" class="form-label">NIT/CI</label>
                        <input asp-for="NewClient.TaxDocument" class="form-control" placeholder="Ingrese el documento de identidad o NIT" />
                        <span asp-validation-for="NewClient.TaxDocument" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Cliente
                    </button>
                    <a asp-page="/Sales" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar y Volver a Ventas
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}