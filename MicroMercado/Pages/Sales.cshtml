@page
@model MicroMercado.Pages.SalesModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ventas";
}

@section Styles {
    <!-- jQuery UI CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/sales.css" asp-append-version="true" />
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ventas MicroMercado</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item active">Ventas</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row mb-3">
            <!-- Columna principal - Lista de productos -->
            <div class="col-md-9">
                <div class="row">
                    <!-- Buscador de productos -->
                    <div class="col-md-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group mb-0">
                                    <label class="col-form-label" for="product_id">
                                        <i class="fas fa-search fs-6"></i>
                                        <span class="small fw-bold">Buscar Productos</span>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="product_id"
                                           placeholder="Escriba el código, nombre, marca o categoría del producto"
                                           autocomplete="off">
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i>
                                        El sistema mostrará productos con stock disponible.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción y total -->
                    <div class="col-md-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6 mb-2 mb-md-0">
                                        <h3 class="mb-0">
                                            <i class="fas fa-calculator text-primary"></i>
                                            Total:  <span class="text-success">Bs.  <span id="totalVenta">0.00</span></span>
                                        </h3>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <button class="btn btn-primary me-2" id="btnIniciarVenta">
                                            <i class="fas fa-check-circle"></i> Confirmar Venta
                                        </button>
                                        <button class="btn btn-danger" id="btnVaciarListado">
                                            <i class="fas fa-trash-alt"></i> Vaciar Lista
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de productos -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-info">
                                <h3 class="card-title">
                                    <i class="fas fa-shopping-cart"></i>
                                    Productos a comprar
                                </h3>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover datatable mb-0" id="lstProductosVenta">
                                        <thead class="bg-info">
                                            <tr>
                                                <th>Código</th>
                                                <th>Producto</th>
                                                <th>Categoría</th>
                                                <th>Cantidad</th>
                                                <th>Precio Unit.</th>
                                                <th>Total</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="empty-cart-message">
                                                <td colspan="7" class="text-center text-muted py-4">
                                                    <i class="fas fa-shopping-basket fa-3x mb-3 d-block"></i>
                                                    <p class="mb-0">No hay productos</p>
                                                    <small>Busque y agregue productos usando el buscador de arriba</small>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna lateral - Información de venta -->
            <div class="col-md-3">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="mb-0">
                            <i class="fas fa-cash-register"></i>
                            Resumen de Venta
                        </h5>
                    </div>
                    <div class="card-body">

                        <!-- Cliente - NIT/CI -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-id-card"></i>
                                NIT/CI del Cliente
                            </label>
                            <div class="input-group">
                                <input type="text"
                                       id="idDocumentoRecibido"
                                       class="form-control"
                                       placeholder="Ej: 1234567"
                                       asp-for="ClientTaxDocument"> @* <--- ¡AQUÍ! Se agregó asp-for *@
                                <button class="btn btn-info" type="button" id="btnBuscarCliente">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">Ingrese NIT/CI de cliente</small>
                        </div>

                        <!-- Nombre del cliente -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user"></i>
                                Nombre del Cliente
                            </label>
                            <div class="input-group">
                                <input type="text"
                                       id="nombreCliente"
                                       class="form-control"
                                       placeholder="Nombre del cliente"
                                       readonly>
                                <a asp-page="/NewClient"
                                   class="btn btn-success"
                                   title="Agregar nuevo cliente">
                                    <i class="fas fa-user-plus"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Tipo de pago -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-money-bill-wave"></i>
                                Tipo de Pago <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="selTipoPago">
                                <option value="0">Seleccione tipo de pago</option>
                                <option value="1" selected>Efectivo</option>
                                <option value="2">QR</option>
                                <option value="3">Tarjeta de Débito/Crédito</option>
                            </select>
                        </div>

                        <hr class="my-3">

                        <!-- Efectivo recibido -->
                        <div class="form-group mb-2">
                            <label class="form-label fw-bold" for="iptEfectivoRecibido">
                                <i class="fas fa-hand-holding-usd"></i>
                                Efectivo Recibido
                            </label>
                            <input type="number"
                                   min="0"
                                   step="0.01"
                                   id="iptEfectivoRecibido"
                                   class="form-control"
                                   placeholder="0.00">
                        </div>

                        <!-- Checkbox efectivo exacto -->
                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="chkEfectivoExacto">
                            <label class="form-check-label" for="chkEfectivoExacto">
                                <i class="fas fa-check-circle text-success"></i>
                                Efectivo Exacto
                            </label>
                        </div>

                        <!-- Resumen de montos -->
                        <div class="bg-light p-3 rounded">
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fas fa-money-bill text-success"></i> Efectivo:</span>
                                <span class="fw-bold">Bs. <span id="EfectivoEntregado">0.00</span></span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span><i class="fas fa-exchange-alt text-warning"></i> Vuelto:</span>
                                <span class="fw-bold text-danger">Bs. <span id="Vuelto">0.00</span></span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold fs-5">TOTAL:</span>
                                <span class="fw-bold fs-5 text-success">Bs. <span id="boleta_total">0.00</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal simplificado para "Agregar Nuevo Cliente" (no funcional en esta iteración) -->
<div class="modal fade" id="modalNuevoCliente" tabindex="-1" aria-labelledby="modalNuevoClienteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalNuevoClienteLabel">
                    <i class="fas fa-user-plus"></i>
                    Agregar Nuevo Cliente (Funcionalidad deshabilitada)
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>La funcionalidad para agregar un nuevo cliente está actualmente deshabilitada en esta versión simplificada.</p>
                <p>Contacte a soporte si necesita esta característica.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/sales.js" asp-append-version="true"></script>

}